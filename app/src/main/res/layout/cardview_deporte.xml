<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_margin="6dp"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/lib/com.example.elahi.aplicacionened"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="4dp"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/futbol" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.32"
                >

                <TextView
                    android:id="@+id/Equipo1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="TEC OAXACA"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"

                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/res_equipo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Equipo1"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"

                    android:text="1" />
                <TextView
                    android:id="@+id/sede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="IT OAXACA"
                    android:autoSizeTextType="uniform"

                    android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.36"

                >
                <!-- Este texview solo esta para dar el margen al VS no tiene funcionalidad -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/versus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:autoSizeTextType="uniform"

                    android:text="VS" />
                <TextView
                    android:id="@+id/jornada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"

                    android:text="JORNADA 1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.32"
                >
                <TextView
                    android:id="@+id/Equipo2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="TEC CELAYA"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"

                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/res_equipo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"

                    android:text="0" />

                <TextView
                    android:id="@+id/horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"

                    android:text="14:00" />



            </LinearLayout>
        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>